<%=render "shared/navbar"%>
<p style="color: green"><%= notice %></p>
<div class = "transaction-set">
<div class = "m-4 bg-primary-subtle" >
<div id="groups" class = "container-sm bg-light" >
  <div class="row mb-4">
    <div class="col-auto p-3">
      <img class="img-thumbnail img-fluid" src="<%= @group.icon %>" alt="User Photo" style="max-width: 150px; max-height: 150px;">
    </div>
    <div class="col pt-5 text-start ">
      <p class="fs-4 text-secondary"> <%= @group.name %> </p>
    </div>
    <div>
      <p  class ="p-2">The <%= @group.name %> category enables users to efficiently manage their budget for <%= @group.name %> by allowing them to itemize their expenses and allocate budget amounts accordingly.
           </p>
    </div>
 <hr class ="mx-auto" style="width: 90%;">
    <div>
      <% if @group.expenses.empty? %>
        <p class="no-record text-center">
          No transaction for this category.
        </p>
      <% end %>
     <% if @recent_expenses.any? %>
  <% @recent_expenses.each do |expense| %>
  <div class = "d-flex justify-content-between">
    <div>
    <p class="ps-2"><%= expense.name %></p>
    <p class="ps-2 text-secondary"><%= expense.created_at.strftime("%d %b %Y at %I:%M%P") %></p>
    </div>
    <div>
    <p class="ps-2"><%= number_to_currency(expense.amount)%></p>
    </div>
    </div>
    <hr class="border border-1">
  <% end %>
<% end %>
    </div>
    <hr class ="mx-auto" style="width:90%;">
    <div class= "d-flex justify-content-between">
    <p>TOTAL PAYMENT</p>
    <p><%=number_to_currency(@total_payment)%></p>
    </div>
     <div class = "btn-bg ">
        <div class="add-btn p-3 text-center">
          <%= link_to 'add a new transaction', new_user_group_expense_path(group_id: @group.id), class: 'btn text-light border px-5' %>
        </div>
    
      </div>
</div>
</div>       
</div>